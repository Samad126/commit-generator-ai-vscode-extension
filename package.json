{
  "name": "commitgenai-vscode-extension",
  "displayName": "CommitGenAI",
  "description": "Generate and copy commit messages from your Git diff via AI",
  "version": "0.0.5",
  "publisher": "SamadsCreations",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onView:commitGenAI.view"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Samad126/commit-generator-ai-vscode-extension.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.4.3",
    "vscode-test": "^1.6.0"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commitGenAI",
          "title": "CommitGenAI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "commitGenAI": [
        {
          "icon": "",
          "type": "webview",
          "id": "commitGenAI.view",
          "name": "Generator"
        }
      ]
    }
  }
}
