{
  "name": "commitgenai-vscode-extension",
  "displayName": "CommitGenAI",
  "description": "Generate and copy commit messages from your Git diff via AI",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onCommand:commitgenai.openPanel"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "node-fetch": "^3.4.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^14.14.37",
    "@types/node-fetch": "^2.5.12",
    "typescript": "^4.4.3",
    "vscode-test": "^1.6.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "commitgenai.openPanel",
        "title": "CommitGenAI: Open Generator Panel"
      }
    ]
  }
}
